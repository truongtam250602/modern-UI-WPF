<UserControl x:Class="ModernUI.CustomControls.BindablePasswordBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ModernUI.CustomControls"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="800">
    <PasswordBox x:Name="txtPassword"
                             FontFamily="Montserrat"
                             FontSize="13"
                             Foreground="White"
                             FontWeight="Medium"
                             CaretBrush="LightGray"
                             BorderThickness="0,0,0,1"
                             BorderBrush="DarkGray"
                             Padding="20,0,0,0"
                             VerticalAlignment="Center"
                             IsEnabled="True">
        <PasswordBox.Background>
            <ImageBrush ImageSource="/ModernUI;component/Images/key+key+lock+lock+office+password+security+icon-1320183171044108751.ico"
                                        Stretch="None"
                                        AlignmentX="Left"
                                        AlignmentY="Top"/>
        </PasswordBox.Background>
    </PasswordBox>
</UserControl>
